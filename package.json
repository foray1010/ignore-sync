{
  "name": "ignore-sync",
  "version": "1.2.0",
  "engines": {
    "node": ">=7.6"
  },
  "description": "a CLI tool to build and sync *ignore files across files and repositories",
  "keywords": [
    ".dockerignore",
    ".eslintignore",
    ".gitignore",
    ".npmignore",
    "dockerignore",
    "eslintignore",
    "gitignore",
    "ignore",
    "npmignore"
  ],
  "license": "MIT",
  "author": "foray1010",
  "repository": "https://github.com/foray1010/ignore-sync",
  "bin": "src/bin.js",
  "scripts": {
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lint": "eslint .",
    "mermaid": "glob-exec --foreach 'docs/**/*.mmd' -- 'mmdc -i {{file}} -o {{file}}.png'",
    "precommit": "lint-staged && yarn test",
    "test": "cross-env NODE_ENV=test jest --config .jestrc.json"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "fs-extra": "^6.0.0",
    "ignore": "^3.3.7",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "cross-env": "^5.1.1",
    "eslint": "^4.8.0",
    "eslint-config-foray1010": "^6.2.0",
    "glob-exec": "^0.1.1",
    "husky": "^0.14.0",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "markdownlint-cli": "^0.8.1",
    "mermaid.cli": "^0.4.6",
    "prettier-eslint-cli": "^4.3.2"
  }
}
