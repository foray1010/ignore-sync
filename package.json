{
  "$schema": "https://json.schemastore.org/package",
  "name": "ignore-sync",
  "version": "4.0.0",
  "description": "a CLI tool to build and sync *ignore files across files and repositories",
  "keywords": [
    ".dockerignore",
    ".eslintignore",
    ".gitignore",
    ".npmignore",
    "dockerignore",
    "eslintignore",
    "gitignore",
    "ignore",
    "npmignore"
  ],
  "repository": "https://github.com/foray1010/ignore-sync",
  "license": "MIT",
  "author": "foray1010",
  "bin": "src/bin.js",
  "files": [
    "src",
    "*.md"
  ],
  "scripts": {
    "ci": "yarn lint:js && yarn lint:md && yarn test",
    "eslint": "eslint --ext=cjs,js,mjs,ts,tsx --ignore-path=node_modules/@foray1010/eslint-config/eslintignore",
    "postinstall": "husky install",
    "lint:js": "yarn eslint .",
    "lint:md": "yarn remark .",
    "mermaid": "glob-exec --foreach 'docs/**/*.mmd' -- 'mmdc -i {{file}} -o {{file}}.png'",
    "prepublishOnly": "pinst --disable",
    "prettier": "prettier --ignore-path=node_modules/@foray1010/prettier-config/prettierignore",
    "postpublish": "pinst --enable",
    "remark": "remark --frail --ignore-path=node_modules/@foray1010/remark-preset/remarkignore --ignore-path-resolve-from=cwd",
    "test": "cross-env NODE_ENV=test jest"
  },
  "dependencies": {
    "axios": "0.22.0",
    "fast-glob": "3.2.7",
    "ignore": "5.1.8",
    "ramda": "0.27.1"
  },
  "devDependencies": {
    "@commitlint/cli": "13.2.0",
    "@commitlint/config-conventional": "13.2.0",
    "@foray1010/eslint-config": "5.0.4",
    "@foray1010/prettier-config": "5.0.1",
    "@foray1010/remark-preset": "4.0.1",
    "cross-env": "7.0.3",
    "eslint": "7.32.0",
    "glob-exec": "0.1.1",
    "husky": "7.0.2",
    "jest": "27.2.4",
    "lint-staged": "11.1.2",
    "mermaid.cli": "0.5.1",
    "pinst": "2.1.6",
    "prettier": "2.4.1",
    "remark-cli": "9.0.0"
  },
  "engines": {
    "node": ">=12.13"
  }
}
