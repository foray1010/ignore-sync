{
  "name": "ignore-sync",
  "version": "2.0.1",
  "engines": {
    "node": ">=7.6"
  },
  "description": "a CLI tool to build and sync *ignore files across files and repositories",
  "keywords": [
    ".dockerignore",
    ".eslintignore",
    ".gitignore",
    ".npmignore",
    "dockerignore",
    "eslintignore",
    "gitignore",
    "ignore",
    "npmignore"
  ],
  "license": "MIT",
  "author": "foray1010",
  "repository": "https://github.com/foray1010/ignore-sync",
  "bin": "src/bin.js",
  "scripts": {
    "lint": "eslint .",
    "mermaid": "glob-exec --foreach 'docs/**/*.mmd' -- 'mmdc -i {{file}} -o {{file}}.png'",
    "test": "cross-env NODE_ENV=test jest --config .jestrc.json"
  },
  "dependencies": {
    "axios": "0.19.0",
    "fs-extra": "8.1.0",
    "ignore": "5.1.4",
    "ramda": "0.26.1"
  },
  "devDependencies": {
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "cross-env": "5.2.1",
    "eslint": "6.3.0",
    "eslint-config-foray1010": "8.0.0",
    "glob-exec": "0.1.1",
    "husky": "3.0.4",
    "jest": "24.9.0",
    "lint-staged": "9.2.5",
    "markdownlint-cli": "0.18.0",
    "mermaid.cli": "0.5.1",
    "prettier-eslint-cli": "5.0.0"
  }
}
